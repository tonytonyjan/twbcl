<%= page_header do %>
  <%= render "components/toolbar" %>
  <% if controller.controller_name == "components"%>
    <%= params[:template].present? ? "Templates" : "Components" %>
  <% elsif controller.controller_name == "component_types" %>
    <%= @component_type.name %>
    <% if params[:template].present? %>
      <span class="label label-info">Template</span>
    <% end %>
  <% end %>
<% end %>

<div class="row">
  <div class="span3 well">
    <%= render "share/navside" %>
  </div>

  <div class="span8">
    <ul>
      <%= render @components %>
    </ul>
  </div>
</div>